<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - .NET MVC Hub</title>
    <link rel="stylesheet" href="~/css/mvctutorial.css" />
</head>
<body>
    <!-- Navbar -->
    <header class="navbar">
        <div class="logo">.NET MVC Hub</div>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Tutorials" asp-action="Index">Tutorials</a></li>
                <li><a asp-controller="Examples" asp-action="Index">Examples</a></li>
                <li><a asp-controller="Quizzes" asp-action="Index">Quizzes</a></li>
                <li><a asp-controller="Resources" asp-action="Index">Resources</a></li>
                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year .NET MVC Hub | Built for Students ❤️</p>
    </footer>

    <script src="~/js/slideshow.js"></script>
    <script src="~/js/quiz.js"></script>
</body>
</html>
