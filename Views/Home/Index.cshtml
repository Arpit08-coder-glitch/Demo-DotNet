@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="home">
    <div class="slideshow-container">
        <div class="slide active">
            <h2>Welcome to .NET & MVC</h2>
            <p>Learn how to build powerful web apps with <code>ASP.NET MVC</code>.</p>
        </div>
        <div class="slide">
            <h2>Why MVC?</h2>
            <p>Organize code into <code>Model</code>, <code>View</code>, and <code>Controller</code>.</p>
        </div>
        <div class="slide">
            <h2>Start Your Journey 🚀</h2>
            <p>Follow tutorials, try examples, and test yourself with quizzes.</p>
        </div>
    </div>
    <div class="slideshow-controls">
        <button id="prev" aria-label="Previous Slide">⟨</button>
        <div id="slide-indicator">1 / 3</div>
        <button id="next" aria-label="Next Slide">⟩</button>
    </div>
    <div class="progress-dots">
        <span class="dot active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</section>
